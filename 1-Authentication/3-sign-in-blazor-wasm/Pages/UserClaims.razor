@inherits UserClaimsBase
@attribute [Microsoft.AspNetCore.Authorization.Authorize]
<AuthorizeView>
    <Authorized>
        <h4>
            @context.User.Identity?.Name has successfully signed-in
        </h4>
        Claims from the ID token
        @if (_claims.Count() > 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Claim Type</th>
                        <th>Value</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var claim in _claims)
                    {
                        <tr>
                            <td>@claim.Type</td>
                            <td>@claim.Value</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <h3>_authMessage</h3>
        }
    </Authorized>
    <NotAuthorized>
        Sign-in to see user details.
    </NotAuthorized>
</AuthorizeView>
