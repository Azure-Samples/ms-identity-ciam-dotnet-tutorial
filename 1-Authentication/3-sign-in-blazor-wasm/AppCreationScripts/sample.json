{
  "Sample": {
    "Title": "Enable your Blazor Single-page Application (SPA) to sign-in users on CIAM with the Microsoft identity platform",
    "Level": 100,
    "Client": "ASP .Net Core Blazor WebAssembly Web App on CIAM",
    "RepositoryUrl": "ms-identity-ciam-dotnet-tutorial",
    "Endpoint": "AAD v2.0",
    "Provider": "CIAM",
    "Languages": ["csharp"],
    "Description": "Enable your Blazor Single-page Application (SPA) to sign-in users on CIAM with the Microsoft identity platform",
    "products": ["azure-active-directory", "microsoft-identity-web"]
  },
  "AADApps": [
    {
      "Id": "spa",
      "Name": "spa-blazor-wasm-ciam",
      "Kind": "SinglePageApplication",
      "Audience": "AzureADMyOrg",
      "SDK": "MicrosoftIdentityWeb",
      "ReplyUrls": "https://localhost:44314/authentication/login-callback",
      "LogoutUrl": "https://localhost:44314/signout-oidc",
      "SampleSubPath": "1-Authentication\\3-sign-in-blazor-wasm",
      "RequiredResourcesAccess": [{
          "Resource": "Microsoft Graph",
          "DelegatedPermissions": ["openid", "offline_access"]
      }],
      "OptionalClaims": {
        "AccessTokenClaims": ["idtyp"]
      },
      "ManualSteps": [
        {
          "Comment": "Navigate to your tenant and create user flows to allow users to sign up for the application."
        }
      ]
    }
  ],
  "CodeConfiguration": [
    {
      "App": "spa",
      "SettingKind": "Text",
      "SettingFile": "\\..\\wwwroot\\appsettings.json",
      "Mappings": [
        {
          "key": "ClientId",
          "value": ".AppId"
        },
        {
          "key": "Authority",
          "value": "'https://'+$tenantName+'.ciamlogin.com/'+$tenantId"
        },
        {
          "key": "ValidateAuthority",
          "value": "'true'"
        }
      ]
    }
  ]
}