{
  "Sample": {
    "Title": "An ASP.NET Core Web App which lets sign-in users with work and school in my org",
    "Level": 200,
    "Client": "ASP.NET Core Web App",
    "RepositoryUrl": "ms-identity-ciam-dotnet-tutorial",
    "Endpoint": "AAD v2.0",
    "Provider": "CIAM"
  },

  /*
    This section describes the Azure AD Applications to configure, and their dependencies
  */
  "AADApps": [
    {
      "Id": "webApp",
      "Name": "CIAMWebApp",
      "Kind": "WebApp",
      "Audience": "AzureADMyOrg",
      "HomePage": "https://localhost:7274/",
      "ReplyUrls": "https://localhost:7274/, https://localhost:7274/signin-oidc",
      "LogoutUrl": "https://localhost:7274/signout-oidc",
      "SDK": "MicrosoftIdentityWeb",
      "SampleSubPath": "1-Authentication\\1-sign-in-aspnet-core-mvc"
    }
  ],
  "CodeConfiguration": [
    {
      "App": "webApp",
      "SettingKind": "json",
      "SettingFile": "\\..\\appsettings.json",
      "Mappings": [
        {
          "key": "ClientId",
          "value": ".AppId"
        },
        {
          "key": "TenantId",
          "value": "$tenantId"
        },
        {
          "key": "Domain",
          "value": "$tenantName"
        }
      ]
    }
  ]
}
